@model IEnumerable<SchoolMVCEF.Models.TeachersViewModel>

@{
    ViewBag.Title = "EditTeachers";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeacherId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses)
        </th>
        <th></th>
    </tr>


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeacherId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @foreach (var item2 in item.Courses)
            {
                <p>@item2.CourseName. @item2.CourseSubject @Html.ActionLink("Delete", "Delete", new {TeacherId=item.TeacherId, CourseId=item2.CourseId })</p>
                   
            }
        </td>
        <td>
            @Html.ActionLink("Edit Teacher", "EditTeacher", new {TeacherId=item.TeacherId})
            @Html.ActionLink("Delete", "Delete", new {TeacherId=item.TeacherId})
        </td>
    </tr>
}
</table>

