@model IEnumerable<SchoolMVCEF.Models.CoursesViewModel>
@{
    ViewBag.Title = "Add";
}

<h2>Add a new student</h2>

<form method="post">
    <div class="form-group form">
         <label for="n">Firstname:</label>
         <input type="text" name="FirstnameIn" value="Firstname" id="n" class="form-control" />
    </div>
    <div class="form-group form">
         <label for="lN">Lastname:</label>
         <input type="text" name="LastnameIn" value="Lastname" id="lN" class="form-control" />
    </div>

    @foreach (var item in Model)
    {
        <input type="checkbox" name="Assignments" value="@item.CourseId" /><span> @item.CourseName . @item.CourseSubject</span> <br />
    }

    <input type="submit" value="Add Student" class="btn btn-default"/>
</form>

