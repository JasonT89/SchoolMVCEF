@model IEnumerable<SchoolMVCEF.Models.StudentsViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses)
        </th>
        <th></th>
    </tr>


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @foreach (var item2 in item.Courses)
            {
                <p>@item2.CourseName. @item2.CourseSubject</p>
                   @Html.ActionLink("Delete", "Delete", new {StudentId=item.StudentId, CourseId=item2.CourseId })
            }
        </td>
        <td>
            @Html.ActionLink("Edit Student", "EditStudent", new { StudentId = item.StudentId })
            @Html.ActionLink("Delete Student", "Delete", new {StudentId=item.StudentId})
        </td>
    </tr>
}
</table>