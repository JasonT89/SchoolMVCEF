@model SchoolMVCEF.Models.TeachersViewModel

@{
    ViewBag.Title = "EditTeacher";
}

<h2>Edit Teacher</h2>

@using (Html.BeginForm("EditTeacher", "Home", FormMethod.Post))
{
    <div class="form-group form">
        <label for="n">Firstname:</label>
        <input type="text" name="Firstname" value="@Model.FirstName" id="n" class="form-control" />
    </div>
    <div class="form-group">
        <label for="pN">Lastname:</label>
        <input type="text" name="Lastname" value="@Model.LastName" id="pN" class="form-control" />
    </div>

    <div class="form-group">
        Remove Courses
    @foreach (var item in Model.Courses)
    {
            <label for="@item.CourseName">@item.CourseName</label>
            <input type="checkbox" name="Courses" value="@item.CourseId" id="@item.CourseName" class="form-control"/> 
    }
    </div>
    <div class="form-group">
        <label for="aC">Add a Course by Name</label>
        <input type="text" name="AddCourse" value="" id="aC" class="form-control" />
    </div>

    <div class="form-group">
        <input type="hidden" value="@Model.TeacherId" name="id" />
        <input type="submit" value="Edit Teacher" class="btn btn-default" />
    </div>

}