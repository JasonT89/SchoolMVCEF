@model SchoolMVCEF.Models.CoursesViewModel

<form method="post">
    <div class="form-group form">
        <label for="n">Name:</label>
        <input type="text" name="CourseName" value="@Model.CourseName" id="n" class="form-control" />
    </div>
    <div class="form-group">
        <label for="pN">Subject</label>
        <input type="text" name="CourseSubject" value="@Model.CourseSubject" id="pN" class="form-control" />
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.CourseId" name="id" />
        <input type="submit" value="Edit Course" class="btn btn-default" />
    </div>
</form>



